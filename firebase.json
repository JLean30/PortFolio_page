{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/español",
        "destination": "/index-es.html"
      },
      {
        "source": "/cv",
        "destination": "/documents/jeanbrenescv.pdf"
      },
      {
        "source": "/cv-español",
        "destination": "/documents/jeanbrenescv-es.pdf"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
